{
  "name": "topola",
  "version": "0.1.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "browserify index.ts -p [ tsify ] -o dist/bundle.js --s topola",
    "watch": "watchify index.ts -p [ tsify ] -o dist/bundle.js --s topola --debug",
    "server": "browser-sync start --server dist --files dist",
    "start": "concurrently \"npm run watch\" \"npm run server\"",
    "fix": "gts fix",
    "test": "jasmine-ts \"tests/**/*.spec.ts\"",
    "watch-test": "nodemon --ext ts --exec 'jasmine-ts \"tests/**/*.spec.ts\"'"
  },
  "author": "Przemek Wiech",
  "license": "Apache 2.0",
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/jasmine": "^2.8.8",
    "browser-sync": "^2.24.4",
    "browserify": "^16.2.2",
    "concurrently": "^3.5.1",
    "gts": "^0.6.0",
    "jasmine-ts": "^0.2.1",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "nodemon": "^1.17.5",
    "ts-loader": "^4.3.0",
    "tsify": "^4.0.0",
    "typescript": "^2.8.3",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "d3": "^5.4.0",
    "d3-flextree": "^2.1.1",
    "parse-gedcom": "^1.0.3"
  }
}
